<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>transaction</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <nav>
        <div class="nav">
            <h1>Banking Management System <i class="fas fa-piggy-bank"></i></h1>
        </div>
    </nav>
    <!-- transaction history -->

    <div class="btn-trns">
        <button id="btn-his"><p class="make-t">Make Transactions <i class="fas fa-exchange-alt"></i></p> <p class="show-t">Show Transaction History  <i class="fas fa-history"></i></p></button>
    </div>

    <div class="make-tr">
        <h1><a href="/pay" class="s-pay"><i class="fas fa-money-check-alt"></i></a></h1>
    </div>
   
    <div class="make-tr-hide">
        <h2>Click Here To Make A Transactions</h2>
    </div>

    <div class="trns-history">
        <!-- <p>Transactions History<i class="fas fa-arrow-right"></i></p> -->
        <div class="table">

            <table>
                <thead>
                    <tr>
                        <td>Sender</td>
                        <td>Reciever</td>
                        <td>Amount Transfered</td>
                    </tr>
                </thead>
                <tbody>
                    <% trasactions.forEach(function(t){ %>
                        <tr class="row">
                            <td><%= t.sender %></td>
                            <td><%= t.reciever %></td>
                            <td>Rs. <%= t.transAmnt %>/-</td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            </div>
            
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script src="js/logic.js"></script>

    <div class="footer">
        <p><i class="far fa-copyright" style="user-select: auto;"></i> Sumit Morwal</p>
    </div>

</body>
</html>